{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,

  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "#8ab4f8",
          "template": "{{ .Path }} ",
          "options": {
            "style": "agnoster_short",
            "max_depth": 3,
            "home_icon": "~",
            "folder_icon": "..",
            "folder_separator_icon": "/"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#98c379",
          "template": "{{ .HEAD }}{{ if .Working.Changed }}*{{ end }}{{ if .Staging.Changed }}+{{ end }}{{ if gt .Ahead 0 }} ⇡{{ .Ahead }}{{ end }}{{ if gt .Behind 0 }} ⇣{{ .Behind }}{{ end }}",
          "foreground_templates": [
            "{{ if .Working.Changed }}#e5c07b{{ end }}",
            "{{ if .Staging.Changed }}#d19a66{{ end }}",
            "{{ if or (gt .Ahead 0) (gt .Behind 0) }}#56b6c2{{ end }}"
          ],
          "options": {
            "fetch_status": true,
            "branch_icon": ""
          }
        }
      ]
    },

    {
      "type": "rprompt",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#7f848e",
          "template": "{{ .FormattedMs }}",
          "options": {
            "threshold": 500
          }
        }
      ]
    },

    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "template": "\u276f ",
          "foreground": "#8ec07c",
          "foreground_templates": [
            "{{ if ne .Code 0 }}#e06c75{{ end }}"
          ]
        }
      ]
    }
  ]
}

